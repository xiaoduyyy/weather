<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/city_item"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:entries="@array/cities"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/trans"
        android:dropDownVerticalOffset="40dp"
        android:forceHasOverlappingRendering="false"/>

    <ImageView
        android:id="@+id/weather_picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/weather_qing"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/location"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="陕西省 咸阳市"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="38℃"
        android:textSize="100sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="晴"/>
        <TextView
            android:id="@+id/high_and_low_tempreture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="最高40° 最低10°"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_background">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/humidity_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50％"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/humidity_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_background">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="气压"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/pressure_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10hPa"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pressure_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_background">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/windDerection_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西风"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/wind_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10m/s"
                        android:layout_marginLeft="30dp"
                        android:textSize="15sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wind_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_background">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日出日落"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/sunrise_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6:00"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/sunset_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:00"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sunriseandset_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_background">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能见度"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/visibility_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10m"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/visibility_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_background">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空气质量"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/airqulity_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/airquality_icon"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>


</LinearLayout>