<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000">

    <ImageView
        android:id="@+id/weather_picture"
        android:layout_marginTop="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/weather_qing"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/location"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="陕西省 咸阳市"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38"
            android:textSize="100sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textSize="40dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="晴"/>
        <TextView
            android:id="@+id/high_and_low_tempreture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="最高40° 最低10°"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/airqulity_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#40475164"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/airquality_icon"/>

                <TextView
                    android:id="@+id/airqulity_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" 空气质量 优"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/alarm_card_text"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="#65475164"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/alarm_typeandlevel_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="天气提示"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:background="@drawable/alarm_icon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/alarm_content_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="今天阳光明媚，适合外出活动。"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#65475164"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="今天"
                                android:textColor="@color/white"
                                android:textSize="20dp"/>
                            <View
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/today_weather_textview"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="中雨"
                                android:textSize="15dp"
                                android:layout_gravity="center" />
                            <View
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/today_weather_imageview"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/zhongyu"/>
                            <View
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/today_temperature_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22°~31°"
                                android:textSize="20dp"
                                android:layout_gravity="center" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#50FFFFFF"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="明天"
                                android:textColor="@color/white"
                                android:textSize="20dp"/>
                            <View
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tomorrow_weather_textview"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="中雨"
                                android:textSize="15dp"
                                android:layout_gravity="center"/>
                            <View
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/tomorrow_weather_imageview"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/zhongyu"/>
                            <View
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tomorrow_temperature_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22°~31°"
                                android:textSize="20dp"
                                android:layout_gravity="center" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#50FFFFFF"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/aftertomorrow_name_textview"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="周三"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                            <View
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/aftertomorrow_weather_textview"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="中雨"
                                android:textSize="15dp"
                                android:layout_gravity="center" />
                            <View
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/aftertomorrow_weather_imageview"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/zhongyu"/>
                            <View
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/aftertomorrow_temperature_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22°~31°"
                                android:textSize="20dp"
                                android:layout_gravity="center" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/weather_report_details_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="160dp"
                    android:text="查看近七日天气"
                    android:background="#20FFFFFF" />
            </androidx.cardview.widget.CardView>



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#65475164">
                <com.example.myweatherdemo.Others.CustomRecyclerView
                    android:id="@+id/day_hours_weather"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </androidx.core.widget.NestedScrollView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/additem_background">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"/>
                        <TextView
                            android:id="@+id/humidity_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50％"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/humidity_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/additem_background">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="气压"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"/>
                        <TextView
                            android:id="@+id/pressure_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10hPa"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pressure_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/additem_background">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/windDerection_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="西风"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"/>
                        <TextView
                            android:id="@+id/wind_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10m/s"
                            android:layout_marginLeft="30dp"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/wind_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/additem_background">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日出日落"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"/>
                        <TextView
                            android:id="@+id/sunrise_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6:00"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/sunset_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:00"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/sunriseandset_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/additem_background">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="能见度"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"/>
                        <TextView
                            android:id="@+id/visibility_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10m"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/visibility_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/additem_background">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="紫外线"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"/>
                        <TextView
                            android:id="@+id/rays_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="强"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/uvrays_icon"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
